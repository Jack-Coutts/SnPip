    "import math\n",
    "from math import log as ln\n",
    "\n",
    "def sdi(*af):\n",
    "    index = []\n",
    "    \n",
    "    while True:\n",
    "        for x in af:\n",
    "            if x > 0:\n",
    "                Pi = (x) * ln(x)\n",
    "                index.append(Pi)\n",
    "        H = -sum(index)\n",
    "        return H"
   ]
